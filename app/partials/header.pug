nav.navbar.navbar-default.navbar-fixed-top(ng-class='{"navbarHome":currentPath == "/","retreat": currentPath != "/"}')
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar')
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/')
				img#main-logo(ng-class='{"main-logo-home":currentPath == "/","main-logo-default": currentPath != "/"}' ng-src='{{strings.website["main-logo"]}}')

		#navbar.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				li(ng-repeat='item in strings.website.links track by $index' ng-class='{"active": $index == 0}' name='{{item.name}}')
					a(ng-href='{{item.href}}') {{item.title}}
				li.text-center
					a.social(ng-repeat="midia in strings.website.midia" ng-href='{{midia.href}}' target='_blank')
						i.fa(ng-class="midia.icon")

#carousel-header.carousel.slide(data-ride='carousel' ng-show='currentPath == "/"')
	.carousel-inner(role='listbox')
		.item(ng-repeat="slide in strings.slides track by $index" ng-class='{"active": $index == 0}')
			div
				.picture(ng-parallax pattern="slide.src" speed='0')
				.cover
					h2.title.text-center
						| {{slide.title}}
					p.subtitle.text-center
						| {{slide.subtitle}}
					p.text-center
						a.btn.btn-primary.btn-lg.btn-outline.text-white(ng-href='{{slide.button.href}}' ng-if='slide.button.enabled') 
							| {{slide.button.caption}}

	a.left.carousel-control(data-target="#carousel-header" role="button" data-slide='prev')
		span.fa.fa-angle-left(aria-hidden='true')
	a.right.carousel-control(data-target="#carousel-header" role="button" data-slide='next')
		span.fa.fa-angle-right(aria-hidden='true')